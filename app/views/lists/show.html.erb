<h1><%= @list.name %></h1>

<p>Add a task</p>
<input type="text" data-list-id="<%= @list.id %>">

<ul class="task-list">
  <% @list.tasks.each do |task| %>
    <li class="task <%= if task.completed? then 'complete' else '' end %>" data-task-id="<%= task.id %>">
      <%= task.content %>
    </li>

    <%= link_to task, remote: true, method: :delete,  data: { confirm: 'Delete this task?' } do %>
  <button>Delete!</button>
  <% end %>
</ul>